<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="UPDATE LISENCE"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtLisenceNumberUpLi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Lisence Number"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtCountryUpLi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="License Country"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtLisenceEXPUpLi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="yyyy-mm-dd"
        android:inputType="date" />


    <Button
        android:id="@+id/btnDoctorProfileLi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorHealth"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:layout_gravity="center"
        android:textColor="#000000" />
</LinearLayout>